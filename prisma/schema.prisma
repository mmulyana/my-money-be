generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Wallet {
  id      String  @id @default(ulid())
  name    String
  color   String
  balance BigInt? @default(0)
  userId  String

  transaction Transaction[]
  budgets     Budget[]

  user User @relation(fields: [userId], references: [id])
}

model Category {
  id           String          @id @default(ulid())
  name         String
  color        String
  type         TransactionType
  parentId     String?
  imageUrl     String?
  imageVariant String?
  userId       String

  transactions Transaction[]
  budgetItem   BudgetItem[]

  parent   Category?  @relation("CategoryToSubcategories", fields: [parentId], references: [id])
  children Category[] @relation("CategoryToSubcategories")
  user     User       @relation(fields: [userId], references: [id])
}

model Transaction {
  id         String          @id @default(ulid())
  categoryId String
  walletId   String
  amount     BigInt
  type       TransactionType
  date       DateTime
  remark     String?
  isPending  Boolean         @default(false)
  userId     String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  budgetItemTransaction BudgetItemTransaction[]
  wishlistTransaction   WishlistTransaction[]

  category Category @relation(fields: [categoryId], references: [id])
  wallet   Wallet   @relation(fields: [walletId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

enum TransactionType {
  expense
  income
  transfer
}

model Budget {
  id       String   @id @default(ulid())
  name     String
  startAt  DateTime
  endAt    DateTime
  total    BigInt
  walletId String
  userId   String

  items BudgetItem[]

  wallet Wallet @relation(fields: [walletId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model BudgetItem {
  id         String @id @default(ulid())
  categoryId String
  budgetId   String
  planned    BigInt
  actual     BigInt @default(0)

  budgetItemTransaction BudgetItemTransaction[]

  budget   Budget   @relation(fields: [budgetId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])
}

model BudgetItemTransaction {
  id            String   @id @default(ulid())
  budgetItemId  String
  transactionId String
  createdAt     DateTime @default(now())

  budgetItem  BudgetItem  @relation(fields: [budgetItemId], references: [id])
  transaction Transaction @relation(fields: [transactionId], references: [id])

  @@unique([budgetItemId, transactionId])
  @@index([transactionId])
  @@index([budgetItemId])
}

model Wishlist {
  id          String    @id @default(ulid())
  name        String
  description String?
  deadlineAt  DateTime
  doneAt      DateTime?
  total       BigInt?   @default(0)
  imageUrl    String?
  createdAt   DateTime  @default(now())
  userId      String

  transaction WishlistTransaction[]

  user User @relation(fields: [userId], references: [id])
}

model WishlistTransaction {
  id            String @id @default(ulid())
  wishlistId    String
  transactionId String

  wishlist    Wishlist    @relation(fields: [wishlistId], references: [id])
  transaction Transaction @relation(fields: [transactionId], references: [id])
}

model User {
  id       String  @id @default(ulid())
  username String  @unique
  email    String? @unique
  password String?
  isGuest  Boolean @default(false)
  photoUrl String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  wallet      Wallet[]
  category    Category[]
  transaction Transaction[]
  budget      Budget[]
  wishlist    Wishlist[]
}
